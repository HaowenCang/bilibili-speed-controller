{
  "manifest_version": 3,
  "name": "B站倍速扩展",
  "version": "1.0.1",
  "description": "自动为B站视频添加3、4、8、16倍速播放选项",
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/video/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "author": "Evan Williams",
  "short_name": "B站倍速",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}

